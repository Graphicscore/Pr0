  script.
    $('.top').css('min-height', $(window).height() - 50);
    $('.header').toggleClass('fixed', $(window).scrollTop() > 0);
    
    $(window).resize(function() {
      $('.top').css('min-height', $(window).height() - 50);
    });
    
    $(window).scroll(function() {
      $('.header').toggleClass('fixed', $(window).scrollTop() > 0);
    });
    
    var $root = $('html, body');
    $('a').click(function() {
      $root.animate({
          scrollTop: $('[name="' + $.attr(this, 'href').substr(1) + '"]').offset().top
        }, 500);
      return false;
    });

